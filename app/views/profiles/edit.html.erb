<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row w-screen flex justify-center items-center">
    <div class="col-md-10 offset-md-1">
      <h1 class="text-4xl font-bold my-10 flex justify-center"><%= t '.title' %></h1>

      <%= form_with model: @user, url: profile_path, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group font-bold my-10">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control mb-3 w-96' %>
        </div>
        <div class="form-group font-bold my-10">
        <%= f.label :email %>
        <%= f.email_field :email, class: 'form-control mb-3 w-96' %>
        </div>
        <div class="form-group font-bold my-10">
        <%= f.label :avatar %>
        <%= f.file_field :avatar, onchange: 'previewFileWithId(preview)', class: 'form-control mb-3', accept: 'image/*' %>
        <%= f.hidden_field :avatar_cache %>
        </div>
        <div class='mt-3 mb-3'>
          <%= image_tag @user.avatar.url,
                        class: 'rounded-circle',
                        id: 'preview',
                        size: '200x200' %>
        </div>
        <div class='mt-3 mb-8'>
          <%= f.submit class: 'btn w-96 my-8' %>
        </div>
      <% end %>

    </div>
  </div> 
</div>