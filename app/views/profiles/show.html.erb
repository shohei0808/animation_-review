<% content_for(:title, t('.title')) %>
<div class="container pt-3">
  <div class="row w-screen flex justify-center items-center">
    <div class="col-md-10 offset-md-1">
      <h1 class="text-4xl font-bold my-12 flex justify-center"><%= t '.title' %></h1>
      <table class="table w-96 h-96 border-2 border-black">
        <tr class="border-b-2 border-black">
          <th scope="row"><%= t(User.human_attribute_name(:name)) %></th>
          <td><%= current_user.name %></td>
        </tr>
        <tr class="border-b-2 border-black">
          <th scope="row"><%= t(User.human_attribute_name(:email)) %></th>
          <td><%= current_user.email %></td>
        </tr>
        <tr class="border-b-2 border-black">
          <th scope="row"><%= t(User.human_attribute_name(:avatar)) %></th>
          <td><%= image_tag current_user.avatar.url, class: 'rounded-circle', size: '100x100' %></td>
        </tr>
      </table>
      <%= link_to t('defaults.edit'), edit_profile_path, class: 'btn w-96 my-10' %>
    </div>
  </div>
</div>