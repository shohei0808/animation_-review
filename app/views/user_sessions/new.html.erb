<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row w-screen flex justify-center">
    <div class=" col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="flex justify-center">
        <h1 class="text-4xl font-bold my-16"><%= t '.title' %></h1>
      </div>
      <%= form_with url: login_path, local: true do |f| %>
        <div class="form-group font-bold">
          <%= f.label :email, User.human_attribute_name(:email) %>
          <%= f.text_field :email, class: 'form-control w-96' %>
        </div>
        <div class="form-group font-bold my-10">
          <%= f.label :password, User.human_attribute_name(:password) %>
          <%= f.password_field :password, class: 'form-control w-96' %>
        </div>
        <div class="actions my-10">
          <%= f.submit (t 'defaults.login'), class: 'btn w-96' %>
        </div>
      <% end %>
      <div class='my-10 flex justify-center'>
        <%= link_to (t '.to_register_page'), new_user_path %>
      </div>
      <div class='my-10 flex justify-center'>
        <%= link_to t('.password_forget'), new_password_reset_path %>
      </div>
    </div>
  </div>
</div>
