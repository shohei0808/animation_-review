<% content_for(:title, t('.title')) %>
<div class="container">
  <div class="row w-screen flex justify-center">
    <div class="col-md-10 offset-md-1 col-lg-8 offset-lg-2">
      <div class="flex justify-center">
        <h1 class="text-4xl font-bold my-16"><%= t '.title' %></h1>
      </div>  
      <%= form_with model: @user, local: true do |f| %>
        <%= render 'shared/error_messages', object: f.object %>
        <div class="form-group font-bold">
          <%= f.label :name %>
          <%= f.text_field :name, class: 'form-control w-96' %>
        </div>
        <div class="form-group font-bold my-10">
          <%= f.label :email %>
          <%= f.email_field :email, class: 'form-control w-96' %>
        </div>
        <div class="form-group font-bold my-10">
          <%= f.label :password %>
          <%= f.password_field :password, class: 'form-control w-96' %>
        </div>
        <div class="form-group font-bold my-10">
          <%= f.label :password_confirmation %>
          <%= f.password_field :password_confirmation, class: 'form-control w-96' %>
        </div>
        <%= f.submit (t '.register'), class: 'btn w-96' %>
      <% end %>
      <div class='text-center my-10'>
        <%= link_to (t '.to_login_page'), login_path %>
      </div>
    </div>
  </div>
</div>